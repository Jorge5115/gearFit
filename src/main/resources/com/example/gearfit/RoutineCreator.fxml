<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gearfit.controllers.RoutineCreatorController">
    <children>
        <Pane layoutX="100.0" layoutY="50.0" prefHeight="300.0" prefWidth="400.0">
            <children>
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Crear Nueva Rutina" />
                    <TextField fx:id="routineNameField" promptText="Nombre de la rutina" />

                    <!-- Sección para seleccionar los días de la semana -->
                    <HBox spacing="10" alignment="CENTER">
                        <CheckBox fx:id="mondayCheckBox" text="Lunes" />
                        <CheckBox fx:id="tuesdayCheckBox" text="Martes" />
                        <CheckBox fx:id="wednesdayCheckBox" text="Miércoles" />
                        <CheckBox fx:id="thursdayCheckBox" text="Jueves" />
                        <CheckBox fx:id="fridayCheckBox" text="Viernes" />
                        <CheckBox fx:id="saturdayCheckBox" text="Sábado" />
                        <CheckBox fx:id="sundayCheckBox" text="Domingo" />
                    </HBox>

                    <!-- Botones de acción -->
                    <Button text="Guardar" onAction="#saveRoutine"/>
                    <Button text="Cancelar" onAction="#cancelRoutine"/>
                </VBox>
            </children>
        </Pane>
    </children>
</AnchorPane>
