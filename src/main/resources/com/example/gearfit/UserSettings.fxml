<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="850.0" styleClass="parent" stylesheets="@styles/UserSettings.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gearfit.controllers.UserSettingsController">
    <children>
      <Pane layoutX="13.0" layoutY="13.0" prefHeight="475.0" prefWidth="825.0" styleClass="pane">
         <children>
              <Text layoutX="238.0" layoutY="50.0" styleClass="title" text="Edita tu información personal" />
            <Text layoutX="152.0" layoutY="78.0" styleClass="title-info" text="Gestiona tu información, la privacidad y la seguridad para mejorar tu experiencia en GearFit." />
            <HBox alignment="CENTER" layoutX="42.0" layoutY="102.0" prefHeight="40.0" prefWidth="349.0">
               <children>
            
                                <Label fx:id="userIcon" prefHeight="40.0" prefWidth="40.0" styleClass="userIcon" />
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/email_grey.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label fx:id="emailLabel" prefHeight="40.0" prefWidth="300.0" styleClass="user-email">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <Label layoutX="42.0" layoutY="155.0" styleClass="user-settings" text="Editar perfil" />
            <VBox layoutX="42.0" layoutY="183.0" styleClass="global-vbox-user">
               <children>
            
                          <Label alignment="CENTER" styleClass="user-settings-info" text="Nombre de usuario">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                    <TextField fx:id="usernameField" styleClass="global-textfield-settings">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </TextField>

                          <Label alignment="CENTER" styleClass="user-settings-info" text="Altura en centímetros">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                    <TextField fx:id="heightField" styleClass="global-textfield-settings">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </TextField>
      
                          <Label alignment="CENTER" styleClass="user-settings-info" text="Peso en kilogramos">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                    <TextField fx:id="weightField" styleClass="global-textfield-settings">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label alignment="CENTER" layoutX="10.0" layoutY="190.0" styleClass="user-settings-info" text="Calorías diarias objetivo">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="caloriesField" layoutX="10.0" layoutY="220.0" styleClass="global-textfield-settings">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </VBox.margin>
                  </TextField>
               </children>
            </VBox>
            <Label layoutX="434.0" layoutY="131.0" styleClass="user-settings" text="Cambiar contraseña" />
            <VBox layoutX="434.0" layoutY="159.0" styleClass="global-vbox-user">
               <children>
      
                          <Label alignment="CENTER" styleClass="user-settings-info" text="Contraseña actual">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                    <PasswordField fx:id="passwordField" promptText="Debe contener como mínimo 8 caracteres" styleClass="global-textfield-settings">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </PasswordField>
                  <Label alignment="CENTER" styleClass="user-settings-info" text="Repetir nueva contraseña">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <PasswordField fx:id="repeatPasswordField" styleClass="global-textfield-settings">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </VBox.margin>
                  </PasswordField>
               </children>
            </VBox>
      
                          <Button layoutX="434.0" layoutY="411.0" onAction="#handleDeleteAccount" prefHeight="25.0" prefWidth="108.0" styleClass="delete-button" text="Eliminar cuenta" />
      
                          <Button layoutX="633.0" layoutY="411.0" onAction="#handleSaveChanges" styleClass="save-button" text="Guardar cambios" />
         </children>
      </Pane>
    </children>
</AnchorPane>
